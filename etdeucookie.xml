<?xml version="1.0" encoding="iso-8859-1"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
    <name>plg_system_etdcookie</name>
    <creationDate>6 Mai 2015</creationDate>
    <author>ETD Solutions</author>
    <authorEmail>support@etd-solutions.com</authorEmail>
    <authorUrl>http://www.etd-solutions.com</authorUrl>
    <copyright>Copyright (C) 2015 ETD Solutions. Tous droits réservés.</copyright>
    <license>Utilisation réservée aux clients d'ETD Solutions.</license>
    <version>1.0</version>
    <description>Affiche la bannière d'informations sur l'utilisation des cookies.</description>
    <files>
        <filename plugin="etdeucookie">etdeucookie.php</filename>
        <filename>etdeucookie.xml</filename>
    </files>
        <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_content/models/fields">

                <field
                        name="color"
                        type="color"
                        default="#FFFFFF"
                        label="Couleur du texte"
                        description=""
                        />

                <field
                        name="bg"
                        type="color"
                        default="#000000"
                        label="Couleur de fond du bandeau"
                        description=""
                />

                <field
                        name="message"
                        type="textarea"
                        default="En poursuivant votre navigation sur ce site, sans modifier le paramétrage de vos cookies, vous acceptez l'utilisation de cookies susceptibles de vous proposer des services, offres ou publicités adaptés à vos centres d'intérêts et de réaliser des statistiques de visites."
                        label="Message"
                        description=""
                        rows="10"
                        />

                <field
                        name="article_id"
                        type="modal_article"
                        clear="true"
                        default=""
                        label="Article pour en savoir plus"
                        description=""

                />
            </fieldset>
        </fields>
    </config>
</extension>
